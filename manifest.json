{
  "manifest_version": 3,
  "name": "My Extension",
  "version": "1.0",
  "description": "A plain text description",
  "icons": {
    "128": "icon.png"
 },
  "author": "Ari & Anthony",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./main.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
    "128": "icon.png"
    }
  },
  "permissions": ["activeTab","storage","declarativeContent"]
}